.shop-suit-box .shop-suit .shop-suit-item .image-box {
    display: flex;
    justify-content: center;
    align-items: center;
}

.shop-suit-box .shop-suit .shop-suit-item .cont-box .btn-now-buy {
    background-color: #dc4547;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 140rpx;
    height: 38rpx;
    color: #fff;
    font-size: 24rpx;
    margin-top: 27rpx;
    border-radius: 20rpx;
}

