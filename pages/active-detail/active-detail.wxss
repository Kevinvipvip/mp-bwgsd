.recommend-box {
    padding: 25rpx 25rpx 0;
    background-color: rgb(245, 199, 132);
    position: relative;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.recommend-box:before {
    position: absolute;
    content: '';
    height: 2rpx;
    top: -2rpx;
    left: 0;
    right: 0;
    background-color: rgb(245, 199, 132);
}

.recommend-box .recommend-item {
    width: calc(50% - 12rpx);
    background-color: rgb(255, 249, 239);
    margin-bottom: 24rpx;
